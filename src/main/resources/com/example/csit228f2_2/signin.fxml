<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.csit228f2_2.SignInController">

    <!-- Background -->
    <Rectangle fill="#f0f0f0" height="400" width="600" />

    <!-- Sign In Form -->
    <VBox alignment="CENTER" layoutX="103.0" layoutY="47.0" prefHeight="330.0" prefWidth="393.0" spacing="20">
        <Label style="-fx-font-size: 37px; -fx-font-weight: bold;" text="Sign In" />

        <!-- Username Field -->
        <HBox alignment="CENTER">
            <Label text="Username:">
            <font>
               <Font size="18.0" />
            </font></Label>
            <TextField fx:id="tfUsername" />
        </HBox>

        <!-- Password Field -->
        <HBox alignment="CENTER">
            <Label text="Password:">
            <font>
               <Font size="18.0" />
            </font></Label>
            <PasswordField fx:id="pfPassword" />
        </HBox>

        <!-- Sign In Button -->
        <Button onAction="#handleSignIn" text="Sign In">
         <font>
            <Font size="18.0" />
         </font></Button>

        <!-- Register Button -->
        <Button onAction="#handleRegister" text="Register">
         <font>
            <Font size="18.0" />
         </font></Button>

        <!-- Message Label -->
        <Text fx:id="actionTarget" fill="red" />

    </VBox>
</AnchorPane>
