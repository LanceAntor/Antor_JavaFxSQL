<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="377.0" prefWidth="567.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.csit228f2_2.RegisterController">


    <VBox alignment="CENTER" layoutX="112.0" layoutY="14.0" prefHeight="285.0" prefWidth="344.0" spacing="10">

        <Label style="-fx-font-size: 27pt;" text="REGISTRATION">
         <font>
            <Font size="13.0" />
         </font></Label>

        <HBox alignment="CENTER">
            <Label text="Username:">
            <font>
               <Font size="18.0" />
            </font></Label>
            <TextField fx:id="tfUsername" prefHeight="25.0" prefWidth="141.0" />
        </HBox>


        <HBox alignment="CENTER">
            <Label text="Password:">
            <font>
               <Font size="18.0" />
            </font></Label>
            <PasswordField fx:id="pfPassword" prefHeight="21.0" prefWidth="142.0" />
        </HBox>

        <Label fx:id="messageLabel" />


        <Button onAction="#handleRegister" text="Register" />

        <HBox alignment="CENTER">
            <Label text="Already have an account?" />
        </HBox>
         <Button onAction="#handleSignIn" text="SignIn">
         <font>
            <Font size="13.0" />
         </font>
      </Button>
    </VBox>



</AnchorPane>
